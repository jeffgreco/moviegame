{
  "name": "movie-timeline-game",
  "version": "1.0.0",
  "description": "A game where you arrange movie posters in chronological order",
  "scripts": {
    "fetch-movies": "node scripts/fetch-movies.js",
    "serve": "npx serve .",
    "puzzle-builder": "node puzzle-builder/server.js",
    "build": "node build.js",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "keywords": [
    "game",
    "movies",
    "timeline",
    "tmdb"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "esbuild": "^0.24.0",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.17"
  }
}
